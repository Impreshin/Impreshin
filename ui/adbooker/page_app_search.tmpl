
<section id="maintoolbar">
	<div class="container">
		<div class="toolbar clearfix  ">
			<form class="" style="margin: 0;" id="search-form">
			<ul class="nav nav-pills pull-left">
				<li>
					<h2 style="padding-left: 30px; margin-bottom: -5px;">Search</h2>
				</li>

				<li class="divider-vertical"></li>

			</ul>
			<div class="pull-right">

				<ul class="nav nav-pills pull-right ">
					<li id="search-stats"></li>
					<li>
						<input type="text" class="span3 search-query" id="search" name="search" placeholder="Search string" value="{{ settings['search']['search']|default("") }}">
					</li>

					<li style="padding-left: 10px;">
						<div class="input-append" id="date-picker-area">
							<label for="date-picker">
							<input id="date-picker" name="date-picker" type="text" placeholder="Date Filter" class="span3" value="{{ settings['search']['dates']|default(_user['publication']['current_date']['publish_date']) }}">
								<span class="add-on" style="margin-left: -4px; border-left:none; "><i class="icon-calendar"></i></span></label>

						</div>



					</li>
					<li>
						<button class="btn span2 btn-mini" type="submit">Search</button></li>
					<li class="divider-vertical" style="margin-right: 0;"></li>
					<li>
						<a href="{{ page['print'] }}" target="_blank" class="toolbar-print"><i class="icon-print icon-d-grey"></i></a>
					</li>
					<li class="dropdown pull-right">
						<a data-toggle="dropdown" class="dropdown-toggle c" href="javascript:" style="width:15px;"><i class="icon-wrench"></i></a>
						<ul class="dropdown-menu" id="record-settings">
							<li class="nav-header">Group By</li>
							{% for row in settings['groupby'] %}
							<li data-group-records-by="{{ row['g'] }}" class="{% if settings['group']['g']|default("dates") == row['g'] %}active{% endif %}">
								<a href="javascript:;">{{ row['n'] }}</a>
							</li>
							{% endfor %}






							<li class="nav-header clearfix">Direction</li>
							<li data-order-records-by="ASC" class="{% if settings['group']['o'] == "ASC" %}active{% endif %}" style="width: 50%; float:left;"><a href="javascript:;"><i class="icon-chevron-up icon-grey"></i> ASC</a></li>
							<li data-order-records-by="DESC" class="{% if settings['group']['o'] == "DESC" %}active{% endif %} " style="width: 50%; float:right;"><a href="javascript:;"><i class="icon-chevron-down icon-grey"></i> DESC</a></li>
							<li class="clearfix"></li>
							<li class="divider"></li>
							<li><a href="javascript:;" id="list-settings"><i class="icon-cog  icon-grey"></i> Settings</a></li>
						</ul>
					</li>
				</ul>

			</div>
		</form>

		</div>
		<div class="toolbar-end"></div>
	</div>

</section>

