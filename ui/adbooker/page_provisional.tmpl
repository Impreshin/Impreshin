<div class="modal hide fade wide" id="settings-modal" data-show="false">
	<form class="form-horizontal" style="padding: 0; margin: 0;">
	<div class="modal-header">
		<a class="close" data-dismiss="modal">Ã—</a>

		<h3>
			Settings
		</h3>


	</div>
	<div class="modal-body" style="overflow: hidden;">

		<section class="span8" style="position:absolute;top:0; bottom: 0; left: 0; border-right: 1px dotted #ccc;padding-right: 10px;">
			<h4>
				List Columns<br>
				<small>Drag the items up and down to re-order the list. <br>To remove a column drag it to the "Available" column</small>
			</h4>
			<table style="width: 100%; border-bottom:1px solid #ccc; margin-top: 8px; ">
				<tr class="headingrow" style="">
					<th style="width:50%;"><h5>Selected Columns</h5></th>
					<th style="width: 5px;"></th>
					<th style="width:50%;"><h5>Available</h5></th>
				</tr>

			</table>
			<div class="scroll-pane" style="position:absolute; top:85px; left:0; bottom:0;right:0; overflow: auto;  ">
				<div >
					<table style="width: 100%;">

						<tr>
							<td id="selected-columns" class="connectedSortable">
								{% for row in settings_columns['selected'] %}
								<div data-column="{{ row['c'] }}">{{ row['h']|raw }}</div>
								{% endfor %}

							</td>
							<td style="width: 5px; background-color: #ccc;"></td>
							<td id="available-columns" class="connectedSortable">

								{% for row in settings_columns['available'] %}
								<div data-column="{{ row['c'] }}">{{ row['h']|raw }}</div>
								{% endfor %}

							</td>
						</tr>

					</table>
				</div>
			</div>
		</section>
		<section class="" style="position:absolute;top:0; bottom: 0; right: 0; left: 505px;">
			<h4>
				Record Group<br>
				<small>Group the records by this category
				</small>
			</h4>
			<div class="btn-group square" data-toggle="buttons-radio" id="settings-records-group">
				<button type="button" style="width: 135px;" data-group-records-by="placing"  class="btn {% if _user["settings"]["list"]['group']['g']|default("placing") == "placing" %}active{% endif %}">Placing</button>
				<button type="button" style="width: 135px;" data-group-records-by="type"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "type" %}active{% endif %}">Type</button>
				<button type="button" style="width: 135px;" data-group-records-by="colours"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "colours" %}active{% endif %}">Colours</button>
				<button type="button" style="width: 135px;" data-group-records-by="marketer"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "marketer" %}active{% endif %}">Marketers</button>
				<button type="button" style="width: 135px;" data-group-records-by="columns"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "columns" %}active{% endif %}">Columns</button>
				<button type="button" style="width: 135px;" data-group-records-by="discountPercent"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "discountPercent" %}active{% endif %}">Discount %</button>
				<button type="button" style="width: 135px;" data-group-records-by="accountStatus"  class="btn  {% if _user["settings"]["list"]['group']['g'] == "accountStatus" %}active{% endif %}">Account Status</button>
				<button type="button" style="width: 135px;" data-group-records-by="none"  class="btn span2 {% if _user["settings"]["list"]['group']['g'] == "none" %}active{% endif %}">No Ordering</button>
			</div>
			<div class="clearfix"></div>
			<hr>
			<h4>
				Group Ordering<br>
				<small>Order the groups this way
				</small>
			</h4>
			<div class="btn-group square" data-toggle="buttons-radio" id="settings-records-order">
				<button type="button" style="width: 202px;" data-order-records-by="ASC" class="btn {% if _user["settings"]["list"]['group']['o']|default("ASC") == "ASC" %}active{% endif %}">
					<i class="icon-chevron-up icon-grey"></i> ASC
				</button>
				<button type="button" style="width: 202px;" data-order-records-by="DESC" class="btn  {% if _user["settings"]["list"]['group']['o'] == "DESC" %}active{% endif %}">
					<i class="icon-chevron-down icon-grey"></i> DESC</button>

			</div>
			<div class="clearfix"></div>

		</section>







	</div>
	<div class="modal-footer">
		<div class="row">
			<div class="span9 l">
				<button class="btn btn-mini" type="reset" style="padding-left: 2px; padding-right: 2px;" rel="tooltip" title="Click to reset to defaults" data-placement="right">
					<i class="icon icon-refresh"></i></button>
			</div>
			<div  class=" span6 ">



					<button type="button" class="btn span2 close-btn" style="margin-left: 0;">Cancel</button>
					<button type="submit" class="btn btn-primary span4">Save</button>

			</div>

		</div>

	</div>
	</form>
	<div class="loadingmask wide"></div>
</div>