
<section id="maintoolbar">
	<div class="container">
		<div class="toolbar clearfix  ">
			<ul class="nav nav-pills pull-left">

				<li>
					<div class="btn-group" data-toggle="buttons-radio" id="list-highlight-btns">
						<button class="btn span1 btn-mini {% if _user["settings"]["list"]['provisional']['highlight'] == "checked" %}active{% endif %} " style="width:80px; margin-left: 10px;" data-highlight="checked">Provisional</button>
						<button class="btn span1 btn-mini {% if _user["settings"]["list"]['provisional']['highlight'] == "material" %}active{% endif %} " style="width:80px;" data-highlight="material">Material</button>
						<button class="btn span1 btn-mini {% if _user["settings"]["list"]['provisional']['highlight'] == "layout" %}active{% endif %} " style="width:80px;" data-highlight="layout">Layout</button>
					</div>
				</li>
				<li class="divider-vertical"></li>
				<li>
					<div class="btn-group" data-toggle="buttons-radio" id="list-filter-btns">
						<button data-filter="*" class="btn  btn-mini {% if _user["settings"]["list"]['provisional']['filter'] == "*" %}active{% endif %}" style="width:40px;"><i class="icon-asterisk"></i></button>
						<button data-filter="1" class="btn  btn-mini {% if _user["settings"]["list"]['provisional']['filter'] == "1" %}active{% endif %}" style="width:40px;"><i class="icon-ok"></i></button>
						<button data-filter="0" class="btn  btn-mini {% if _user["settings"]["list"]['provisional']['filter'] == "0" %}active{% endif %}" style="width:40px;"><i class="icon-remove"></i></button>
					</div>
				</li>
				<li class="divider-vertical"></li>
			</ul>
			<div class="pull-right">
			<ul class="nav nav-pills pull-left" id="provisional-stats-bar">


			</ul>
			<ul class="nav nav-pills pull-right ">
				<li class="divider-vertical" style="margin-right: 0;"></li>
				<li class="dropdown pull-right">
					<a data-toggle="dropdown" class="dropdown-toggle c" href="javascript:" style="width:15px;"><i class="icon-wrench"></i></a>
					<ul class="dropdown-menu" id="record-settings">
						<li class="nav-header">Group By</li>
						<li data-group-records-by="placing" class="{% if _user["settings"]["list"]['group']['g']|default("placing") == "placing" %}active{% endif %}"><a href="javascript:;" data-group="placing">Placing</a></li>
						<li data-group-records-by="type" class="{% if _user["settings"]["list"]['group']['g'] == "type" %}active{% endif %}"><a href="javascript:;">Type</a></li>
						<li data-group-records-by="colours" class="{% if _user["settings"]["list"]['group']['g'] == "colours" %}active{% endif %}"><a href="javascript:;">Colours</a></li>
						<li data-group-records-by="marketer" class="{% if _user["settings"]["list"]['group']['g'] == "marketer" %}active{% endif %}"><a href="javascript:;">Marketers</a></li>
						<li data-group-records-by="columns" class="{% if _user["settings"]["list"]['group']['g'] == "columns" %}active{% endif %}"><a href="javascript:;">Columns</a></li>
						<li data-group-records-by="discountPercent" class="{% if _user["settings"]["list"]['group']['g'] == "discountPercent" %}active{% endif %}"><a href="javascript:;">Discount %</a></li>
						<li data-group-records-by="accountStatus" class="{% if _user["settings"]["list"]['group']['g'] == "accountStatus" %}active{% endif %}"><a href="javascript:;">Account Status</a></li>
						<li data-group-records-by="none" class="{% if _user["settings"]["list"]['group']['g'] == "none" %}active{% endif %}"><a href="javascript:;">No Ordering</a></li>
						<li class="nav-header clearfix">Direction</li>
						<li data-order-records-by="ASC" class="{% if _user["settings"]["list"]['group']['o'] == "ASC" %}active{% endif %}" style="width: 50%; float:left;"><a href="javascript:;"><i class="icon-chevron-up icon-grey"></i> ASC</a></li>
						<li data-order-records-by="DESC" class="{% if _user["settings"]["list"]['group']['o'] == "DESC" %}active{% endif %} " style="width: 50%; float:right;"><a href="javascript:;"><i class="icon-chevron-down icon-grey"></i> DESC</a></li>
						<li class="clearfix"></li>
						<li class="divider"></li>
						<li><a href="javascript:;" id="list-settings"><i class="icon-cog  icon-grey"></i> Settings</a></li>
					</ul>
				</li>
			</ul>
			</div>


		</div>
		<div class="toolbar-end"></div>
	</div>

</section>

